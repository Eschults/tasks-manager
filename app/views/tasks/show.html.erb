<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h2><%= @task.title %></h2>
      <p>Description: <%= @task.description %></p>
      <p>Created at: <%= @task.created_at %></p>
      <p>Due on: <%= @task.due_date %></p>
      <p>
        Status:
        <% if @task.done %>
          <%= "Done" %>
        <% else %>
          <%= "To do" %>
        <% end %>
      </p>
      <%= link_to "Back to tasks list", tasks_path %>
    </div>
  </div>
</div>
